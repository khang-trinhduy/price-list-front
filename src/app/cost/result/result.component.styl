tr td:last-child:before
  content: ":"
  padding-right: 15px
.table-result
  border-collapse: collapse
tr
  border-bottom: 1px solid black
.container
  display: flex
  flex-flow: column nowrap
  align-items: center
  padding: 1.5vh 0 1vh
tr:first-child
  background-color: aliceblue
.total-line
  background-color: antiquewhite
.final-line
  background-color: mediumvioletred
  color: white
.download-btn
  display: flex
  flex-flow: row nowrap
  justify-content: space around
  cursor: pointer
  align-items: end
.download-btn span
  text-decoration: underline
  color: #0080ff
.apply-btn
  font-size: 14px
  -webkit-font-smoothing: antialiased
  line-height: 30px
  font-family: Roboto,"Helvetica Neue",sans-serif
  -webkit-box-direction: normal
  padding: 0vh 1vh
  background-color: #1bc18c
  color: white
  font-weight: 420
  cursor: pointer
.vin-gift, .sale-gift
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  align-items: center
.vin-gift p
  width: 261px
.gift-area
  padding: 1vh
  margin: 1vh 0 0.5vh
  line-height: 18.5px
  width: 270px
.vin-gift p
  width: 185px
  margin: unset

.gift-icon, .fadil-icon
  padding-top: 1vh
  color: red
  cursor: pointer
.header-line
  font-size: 14px
  color: #333
  padding: 0 0.5vh
  line-height: 27.5px
  background-color: rgba(27, 193, 140, 0.3803921568627451)
.gift-pin, .fadil-pin
  display: flex
  flex-flow: row wrap
  align-items: center
  justify-content: space-between
  padding: 0 1vh
.radio-container
  height: 100px
  display: flex
.radio-img
  object-fit: contain
  width: 150px